{{#if answerQuestion}}
<button class="btn btn-danger btn-xs cancel-butt" {{action 'cancel'}}>x</button>
<form class="a-q-form">
  <div class="form-group">
    <label for="author">Your Name</label>
    {{input class="form-control" value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="answer">Answer</label>
    {{textarea class="form-control" value=answer id="answer"}}
  </div>
  <button id="ans-q-save" class="btn btn-primary" {{action 'saveAnswer'}}>ANSWER</button>
</form>
<br><hr>
{{else}}
  <button id="ans-q-butt" class="btn btn-primary" {{action 'showForm' question}}>ANSWER</button>
{{/if}}
